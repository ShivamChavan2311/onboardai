{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python3 -m pip install -r rag_app/backend/requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
    "rootDirectory": "rag_app/backend"
  },
  "nixpacks": {
    "phases": {
      "setup": {
        "nixPkgs": ["python311", "pip"]
      }
    }
  }
}
